<p style="color: green"><%= notice %></p>
<h1>Recipes</h1>
<%= link_to "New recipe", new_recipe_path , class:"btn btn-success m-2"%>
<% @recipes.each do |recipe| %>
  <% if can? :manage, recipe %>
    <div class="card">
      <%= render recipe %>
      <%= button_to "Delete", recipe, method: :delete, class: "btn btn-danger"%>
    </div>
  <% end %>
<% end %>
