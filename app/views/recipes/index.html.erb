<p style="color: green"><%= notice %></p>
<h1>Recipes</h1>
<div class="text-right my-2">
  <%= link_to "New recipe", new_recipe_path , class:"btn btn-success"%>
</div>
<% @recipes.includes(:user).each do |recipe| %>
  <% if can? :manage, recipe %>
    <div class="card p-4">
      <%= render recipe %>
      <%= button_to "Remove", recipe, method: :delete, class: "btn btn-danger my-2"%>
    </div>
  <% end %>
<% end %>
