<h2>public recipes</h2>


<% @all_recipes.each do |recipe| %>
    <% if recipe.public %>
      <div class="card w-75">
        <div class="card-body m-3 ">
          <%= render recipe %>
          <h4> total food:</h4>
          <h4> total price:</h4>
   
          <h4>By: <%= User.find(recipe.user_id).name %></h4>

        </div>
    </div>
  <% end %>
<% end %>
